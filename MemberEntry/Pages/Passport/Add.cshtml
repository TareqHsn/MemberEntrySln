@page
@model MemberEntry.Pages.Passport.AddModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add Passport Type</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="PassportType.Name" class="control-label"></label>
        <input asp-for="PassportType.Name" class="form-control" />
        <span asp-validation-for="PassportType.Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./List" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}