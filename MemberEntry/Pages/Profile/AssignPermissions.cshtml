@page "{userId?}"
@model MemberEntry.Pages.Profile.AssignPermissionsModel
@{
}
<h2>Assign Permissions for @Model.UserEmail</h2>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label>Permissions</label>
        @foreach (var permission in Model.AvailablePermissions)
        {
            <div class="form-check">
                <input type="checkbox" name="SelectedPermissions" value="@permission" checked="@Model.CurrentPermissions.Contains(permission)" class="form-check-input" />
                <label class="form-check-label">@permission</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save Permissions</button>
    <a asp-page="/Profile/ManageUsers" class="btn btn-secondary">Back to Users</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}